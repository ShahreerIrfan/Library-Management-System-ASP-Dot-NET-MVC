@model IEnumerable<WebApplication1.Models.Book>

@{
    ViewData["Title"] = "Book List";
}


<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<div class="container mx-auto">
    <h2 class="text-3xl font-bold mb-6">Available Books</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var book in Model)
        {
            <div class="p-4 border rounded">
                <h3 class="text-xl font-bold">@book.Title</h3>
                <p class="text-sm">Author: @book.Author?.Name</p>
                <a href="#" class="mt-4 inline-block bg-blue-600 text-white py-2 px-4 rounded">Borrow</a>
            </div>
        }
    </div>
</div>
