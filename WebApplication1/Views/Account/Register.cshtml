@model WebApplication1.Models.User

@{
    ViewData["Title"] = "Register";
}


<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<div class="max-w-md mx-auto mt-10">
    <h2 class="text-2xl font-bold mb-4">Register</h2>

    <form asp-action="Register" method="post" class="space-y-4">
        <div>
            <label asp-for="Username" class="block text-sm font-medium">Username</label>
            <input asp-for="Username" class="mt-1 block w-full border border-gray-300 rounded-md p-2">
            <span asp-validation-for="Username" class="text-red-600"></span>
        </div>

        <div>
            <label asp-for="Password" class="block text-sm font-medium">Password</label>
            <input asp-for="Password" type="password" class="mt-1 block w-full border border-gray-300 rounded-md p-2">
            <span asp-validation-for="Password" class="text-red-600"></span>
        </div>

        <div>
            <label for="role" class="block text-sm font-medium">Select Role</label>
            <select asp-for="Role" class="mt-1 block w-full border border-gray-300 rounded-md p-2">
                <option value="Normal">Normal User</option>
                <option value="Admin">Admin User</option>
            </select>
            <span asp-validation-for="Role" class="text-red-600"></span>
        </div>

        <div>
            <button type="submit" class="w-full bg-blue-600 text-white rounded-md p-2">Register</button>
        </div>
    </form>
</div>
